extends layout
block content
        .container
            .col-sm-6.col-sm-offset-3
                h1
                    span.fa.fa-sign-in
                    |  Login
                h1
                if message.length>0
                    .alert.alert-danger
                        div #{message}
                // LOGIN FORM
                form(action='/login', method='post')
                    .form-group
                        label Email
                        input.form-control(type='text', name='email')
                    .form-group
                        label Password
                        input.form-control(type='password', name='password')
                    button.btn.btn-warning.btn-lg(type='submit') Login
                    a.btn.btn-link(href='/forgot') Forgot Password?
                hr
                p
                    | Need an account?
                    a(href='/signup')  Signup
                p
                    | Or go
                    a(href='/')  Home
                    | .
