extends layoutReset
block content
    .container-fluid
        section.row.title-row
            .fill-screen.stellar-bg(data-stellar-background-ratio='0.2', style='background-image: url("../../images/ChandiniChowk020.jpg")')

                .loginPanel( ng-controller="resetController" ng-init="init()").loginPanel-responsive.signup-panel
                    aside.col-sm-12.col-sm-height
                        h4.range-title
                            b Reset Password
                        .range-list
                            form(method='POST').range-list-div
                                .form-group(style='display:inline-block;')
                                    input.form-control(type='password', name='password', placeholder='password' )

                                br
                                .form-group(style='display:inline-block;')
                                    input.form-control(type='password', name='confpassword', placeholder='verify password'  )

                                br
                                .form-group
                                    button.btn.btn-primary.login-button(type="submit" ) Update Password

